@model IEnumerable<Home3__MVC.Models.Sauce>

@{
    ViewBag.Title = "DisplaySauces";
}
<h2>Sauces</h2>

<p>
    @Html.ActionLink("Create New", "CreateSauce")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSauce", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteSauce", new { id = item.Id })
            </td>
        </tr>
    }

</table>

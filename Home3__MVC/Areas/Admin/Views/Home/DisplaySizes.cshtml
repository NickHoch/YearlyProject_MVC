@model IEnumerable<Home3__MVC.Models.Size>

@{
    ViewBag.Title = "DisplaySize";
}
<h2>Sizes</h2>

<p>
    @Html.ActionLink("Create New", "CreateSize")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSize", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteSize", new { id = item.Id })
            </td>
        </tr>
    }
</table>

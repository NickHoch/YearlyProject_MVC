@model IEnumerable<Home3__MVC.Models.Ingredient>

@{
    ViewBag.Title = "DisplayIngredients";
}

<h2>Display ingredients</h2>

<p>
    @Html.ActionLink("Create New", "CreateIngredient")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditIngredient", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteIngredient", new { id=item.Id })
        </td>
    </tr>
}

</table>
